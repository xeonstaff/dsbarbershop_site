<style>
  .header-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
  }

  .toast-container {
    position: absolute;
    top: 90px; /* Exactly at bottom of header */
    left: 50%;
    width: 80vw; /* Set to 80% of viewport width */
    transform: translate(-50%, -100%); /* Center horizontally and hide above */
    opacity: 0;
    transition: transform 1s ease-in-out, opacity 1s ease-in-out;
    z-index: 9;
  }

  .toast-container.show {
    transform: translate(-50%, 0); /* Maintain horizontal centering while showing */
    opacity: 1;
  }

  .toast-content {
    background-color: rgba(158, 26, 26, 0.9);
    color: white;
    padding: 1rem;
    display: flex;
    font-family: "barlow";
    justify-content: center; /* Center the text */
    align-items: center;
    width: 100%;
    position: relative; /* For absolute positioning of close button */
  }

  .toast-text {
    text-align: center; /* Center the text */
    width: 100%; /* Take full width */
    padding: 0 2rem; /* Make space for the close button */
  }

  .close-button {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
    transition: opacity 0.2s;
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
  }

  .close-button:hover {
    opacity: 0.7;
  }

  /* Existing styles */
  .header_layout {
    height: 90px;
    width: 100vw;
    display: flex;
    position: relative;
    z-index: 10;
    background-color: var(--header_layout-backgroundColor, rgba(0, 0, 0, 0.8));
    align-items: center;
    justify-content: space-between;
  }
  
  .header_logo {
    margin-left: 30px;
    width: 180px;
  }
  
  .header_nav {
    margin-right: 15px;
    font-size: 1em;
    width: 700px;
    @media screen and (max-width: 700px) {
      font-size: 1.5vw;
    }
  }
  
  .mobile_navigaton_link {
    display: none;
  }
  
  .header_navigation_links {
    display: block;
  }
  
  @media screen and (max-width: 480px) {
    .header_navigation_links {
      display: none;
    }
    .mobile_navigaton_link {
      display: flex;
      justify-content: end;
    }
    .header_logo {
      margin-left: 10px;
      width: 80px;
    }
    .toast-content {
      font-size: 0.9rem;
      padding: 0.75rem;
    }
  }
</style>