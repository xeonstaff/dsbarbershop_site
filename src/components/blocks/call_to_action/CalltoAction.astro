---
import { ImageBackground, Text, ButtonLink } from "../../common";
import backgroundImg from "./assets/dsshop.webp";
---

<div class="call_to_action-container call_to_action-section">
  <ImageBackground
    imgSrc={backgroundImg}
    altText="hansome man getting a shave"
    optionSizes={{ small: 375, medium: 834, full: 1500 }}
  />
  <div class="call_to_action-content call_to_action-textLayout">
    <div class="call_to_action-contentText">
      <Text tag="h3" style="background-color:rgba(0, 0, 0, 0.5); border-radius:10px; padding:5px;"
        >Dayton's destination for world-class grooming services.</Text
      >
      <ButtonLink style="border: 1px solid black" linkPath="/">Book an Appointment</ButtonLink>
    </div>
  </div>
</div>

<style>
  .call_to_action-container {
    container-type: inline-size;
    height: 100%;
  }
  .call_to_action-section {
    position: relative;
  }
  .call_to_action-content {
    position: absolute;
    top: 0;
    left: 0;
  }

  .call_to_action-textLayout {
    display: grid;
    place-items: center;
    width: 100%;
    height: 100%;
  }
  .call_to_action-contentText {
    width: 750px;
    height: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap:80px;
    --commonformat_fontColor:var(--main_white);
    --commonformat_textAlign:center;
    h3{
      -webkit-text-stroke: 1px rgba(0, 0, 0, 1);
    }
  }

  @container (max-width: 820px) {
    .call_to_action-contentText {
    max-width: 460px;
    height: 265px;
    font-size: 12px;
    gap:40px;

    }
  }

  @container (max-width: 500px) {
    .call_to_action-contentText {
    width: 335px;
    height: 200px;
    font-size: 10px;
    gap:20px;
    --button_link_width:168px;
    --button_link_padding:10px;

    }
  }
</style>
