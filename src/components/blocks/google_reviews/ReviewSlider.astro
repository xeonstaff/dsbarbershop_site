  }

  // Update review and indicators dynamically
  function updateReview() {
    reviewText.textContent = reviews[currentReviewIndex].review;
    reviewAuthor.textContent = `- ${reviews[currentReviewIndex].name}`;

    const indicators = document.querySelectorAll(".indicator");
    indicators.forEach((indicator, index) => {
      indicator.classList.toggle("active", index === currentReviewIndex);
    });
  }

  function goToNextReview() {
    currentReviewIndex = (currentReviewIndex + 1) % reviews.length;
    updateReview();
  }

  function goToPrevReview() {
    currentReviewIndex = (currentReviewIndex - 1 + reviews.length) % reviews.length;
    updateReview();
  }

  nextButton.addEventListener("click", goToNextReview);
  prevButton.addEventListener("click", goToPrevReview);

  function autoChangeReview() {
    setInterval(goToNextReview, 5000);
  }

  initializeReviews();
  autoChangeReview();
</script>

