---
const { linkPath, varient, newWindow = false } = Astro.props;

const varienets = {
  transparent: {
    backgroundColor: "none",
    border: "solid var(--main_black)  2px",
  },
  backout: {
    backgroundColor: "black",
    border: "solid var(--main_black) 2px",
    color: "white",
  },
};
---

<a href={linkPath} target={newWindow ? "_blank" : ""}>
  <div class="button" style={varienets[varient]}>
    <slot />
  </div>
</a>

<style>
  div {
    background-color: var(--main_darkVanilla);
    padding: var(--button_link_padding, 20px 10px);
    margin: var(--button_link_margin, 0px 0px);
    display: grid;
    place-items: center;
    line-height: 20px;
    justify-self: center;
    width: var(--button_link_width, 240px);
    border-radius: 5px;
    font-size: inherit;
    margin-top: 15px;
    display: flex;
    justify-content: center;
    border: 1px solid black;
  }

  div:hover {
    background-color: rgb(157, 140, 116);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    /* scale:1.05 */
  }
  a {
    color: var(--main_black);
    font-family: "barlow";
    font-weight: 800;
    text-transform: uppercase;
    text-decoration: none;
    font-size: inherit;
  }
  a:visited {
    color: var(--main_black);
    text-decoration: none;
  }
  a:active {
    color: var(--main_white);
  }

  @container (max-width: 820px) {
    .button {
      margin-top: 20px;
      font-size: 15px;
    }
  }
  @container (max-width: 480px) {
    .button {
      margin-top: 0px;
      margin-bottom: 0px;
      max-width: 40vw;
      height: 4vw;
      font-size: 12px;
    }
  }
</style>
