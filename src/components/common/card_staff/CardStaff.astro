---
import { Image } from "astro:assets";
import { staffImages } from "./assets/staffImage";

import { getEntry } from "astro:content";

import { Text } from "../../common";

const { staffName, bookPath } = Astro.props;
const nameALowercase = staffName.toLowerCase();
const staffEntry = await getEntry("staff", nameALowercase);
const defaultDescription =
  "D's Barbershop was founded in 2019 as a traditional barbershop.";

---

<div class="cardStaffGrid">
  <div class="cardStaff">
    <div class="cardStaff_image">
      <Image
        src={staffImages?.[nameALowercase].primary}
        alt={`${staffName} primary`}
        class="primaryImage"
      />
      <Image
        src={staffImages?.[nameALowercase].secondary}
        alt={`${staffName} secondary`}
        class="secondaryImage"
      />
    </div>

    <div class="cardStaff_content">
      <Text tag="h4" class="cardStaff_name">{staffName}</Text>
      <div class="cardStaff_bookLink">
        <a target="_blank" href={staffEntry?.data?.bookEmPath || bookPath[staffName]}>BOOK NOW</a>
      </div>
    </div>
  </div>
</div>

<style>  

  .cardStaffGrid {
    display: grid;
    grid-template-columns: repeat(600);
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto; 
  }
  .cardStaff {
    max-width: 100%;
    background: #ffffff; 
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    overflow: hidden; 
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .cardStaff:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .cardStaff_image {
    position: relative;
    height: 400px;
    aspect-ratio: 3 / 4;
    background-color: #d8d8d8; 
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; 
  }

  /* Primary image (default view) */
  .primaryImage {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s ease; /* Fade effect */
    z-index: 1;
  }

  /* Secondary image (appears on hover) */
  .secondaryImage {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0; /* Initially hidden */
    transition: opacity 0.5s ease; /* Fade effect */
    z-index: 2;
  }

  /* On hover: show secondary image */
  .cardStaff_image:hover .primaryImage {
    opacity: 0; /* Fade out primary */
  }

  .cardStaff_image:hover .secondaryImage {
    opacity: 1; /* Fade in secondary */
  }

  /* Mobile tap effect (hover-like interaction) */
  .cardStaff_image:active .primaryImage {
    opacity: 0;
  }

  .cardStaff_image:active .secondaryImage {
    opacity: 1;
  }

  /* Text content */
  .cardStaff_content {
    background-color: var(--main_corked);
    padding: 16px; /* Consistent padding */
    font-family: 'Arial', sans-serif;
    text-align: center; /* Center-align text */
    color: #333; /* Neutral text color */
  }

  .cardStaff_name {
    font-size: 40px;
    font-weight: bold;
    display: flex;
    justify-content: center;
    margin: 0 0 18px 0; 
    color: #222; 
  }

  /* Button styling */
  .cardStaff_bookLink a {
    display: flex;
    justify-self: center;
    justify-content: center;
    align-items: center;
    padding: 8px 16px;
    font-size: 14px;
    height: 30px;
    width: 100px;
    font-weight: bold;
    color: #ffffff;
    background-color: rgba(26, 26, 26, 0.75);
    text-decoration: none;
    border-radius: 8px;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .cardStaff_bookLink a:hover {
    background-color: black;
  }
</style>
