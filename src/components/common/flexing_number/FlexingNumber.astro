---
const { value, symbol } = Astro.props;
---

<div class="flexing_number flexing_number-layout">
  <p class="flexing_value">
    {value}<span class="flexing_symbol">{symbol}</span>
  </p>
  <div class="flexing_description"><slot /></div>
</div>

<style>
  .flexing_number-layout {
    display: grid;
  }
  .flexing_number {
    font-family: "BarlowBold";
    font-weight: 800;
    font-size:var(--flexingNumber_fontSize, 1rem);
    text-transform: uppercase;
    color: var(--main_black);
    height: min-content;
    p {
      margin: 0;
      padding: 0;
    }
  }
  .flexing_value {
    font-size:2.5em;
    line-height: 58px;
    letter-spacing: 0.05em;
    display: flex;
    justify-content: center;
  }
  .flexing_symbol {
    color: var(--main_darkVanilla);
  }
  .flexing_description {
    text-align: center;
    margin-top:15px;
    font-size: 1.3em;
    line-height: 35px;
    letter-spacing: 0.0px;
  }

  @media screen and (max-width: 920px) {
    .flexing_description {
      font-size: 1em;
      line-height: 20px;
    }
  }
  @media screen and (max-width: 500px) {
    .flexing_value {
      max-height: 30px;
    }
  }
</style>
