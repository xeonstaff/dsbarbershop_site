---
import LogoWNav from "../../blocks/Logo_with_nav/LogoWNav.astro"

const {backgroundImage, thePlace,theLocation} = Astro.props

---

<div class="hero_container">
  <LogoWNav activePage={thePlace}/>

  <div class="hero_layout">
    <div
      style={`background-image: url(${backgroundImage.src})`}
      class="hero_image"
    >
    </div>
    <div class="hero_textBox">
      <h1 class="textBox_header" >{thePlace}</h1>
      <p class="textBox_subHeader">{theLocation}</p>
    </div>
  </div>
</div>


<style>
  .hero_container {
    container-type: inline-size;
    width: 100%;
    height: 1000px;
    position: absolute;
    top: 0;
  }
  .hero_layout {
    display: grid;
    height: 100%;
    grid-template-rows: 600px auto;
    overflow: hidden;
    & > * {
      grid-column: 1;
      grid-row: 1;
    }
  }
  .hero_image {
    grid-area: heroImage;
    background-repeat: no-repeat;
    background-size: contain;
    aspect-ratio: 2 / 1;
  }
  .hero_textBox {
    --commonformat_fontColor: var(--main_white);
    display: flex;
    flex-direction: column;
    height: min-content;
    margin-top: 15%;
    margin-left:5%;
    font-size: 24px;
    color:var(--main_white);
    padding-left: 2%;
    width: 400px;
    background: rgb(222,199,166);
    background: linear-gradient(90deg, rgba(222, 199, 166, 0.904) 0%, rgba(23, 25, 24, 0.5) 1%, rgba(23, 25, 24, .1) 100%); 
  }
  .textBox_subHeader{
    font-family: workSans;
  }
  .textBox_header{
    font-family: "barlow";
    font-weight: 700;
    font-size: 3em;
    margin: 0;
  }

  @container (max-width: 820px) {
    .hero_layout {
      display: grid;
      grid-template-rows: 375px auto;
    }
    .hero_textBox {
      font-size: 16.5px;
      h2 {
        width: 85%;
        text-align: center;
      }
    }
  }

  @container (max-width: 600px) {
    
    .hero_layout {
    flex-direction: column-reverse;
    height: 100%;

  }
  .hero_textBox {
    font-size: 12px;
    margin-left: 0%;
  } 
  .hero_textBox p{
      margin-top: 10px;
      margin-bottom: 30px;
    }
  }
</style>
