---
import { Image } from "astro:assets";

const { imgSrc, altText, optionSizes } = Astro.props;

---

  <Image
    class="theimage"
    src={imgSrc}
    widths={[...Object.values(optionSizes)]}
    sizes={`(max-width: 500px) ${optionSizes.small}px, (max-width: 820px) ${optionSizes.medium}px, (max-width:1440px) ${optionSizes.full},${imgSrc.width}`}
    alt={altText}
  />

<style>

  .theimage {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

</style>
