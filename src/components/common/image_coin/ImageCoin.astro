---
import { Image } from "astro:assets";
interface Props {
  imageSrc: string;
  imageAlt: string;
  index: number;
}

const { imageSrc, imageAlt, index } = Astro.props;

const imageSetting = [
  {
    postion: 1,
    size: 120,
  },
  {
    postion: 2,
    size: 180,
  },
  {
    postion: 3,
    size: 260,
  },
  {
    postion: 4,
    size: 180,
  },
  {
    postion: 5,
    size: 120,
  },
];
---


  <div class="customer_images">
    <Image
      src={imageSrc}
      class="img"
      widths={[80, 185, 260]}
      sizes={`(max-width: 500px) 80px, (max-width: 830px) 185px, (max-width: 1440px) 260px`}
      alt={imageAlt}
    />
  </div>
</div>

<style>
   .img{
      width: 100%;
    height: 100%;
    object-fit: contain;
   }

  .customer_images {
    border-radius: 100%;
    background-color: var(--main_black);
    overflow: hidden;
    width: var(--customer_images_width-base, 260px);
    height: var(--customer_images_width-base, 260px);
  }
  .customer_images:nth-child(2n + 2) {
    width: var(--customer_images_width-2n2 ,180px);
    height: var(--customer_images_width-2n2 ,180px);
  }
  .customer_images:nth-child(4n + 1) {
    width: var(--customer_images_width-4n1 ,120px);
    height:  var(--customer_images_width-4n1 ,120px);
  }



</style>
