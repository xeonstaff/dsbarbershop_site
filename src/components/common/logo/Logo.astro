---
import { Image } from "astro:assets";
import logo from "../../assets/logo.png";

const {customHeight,hasBiznasName=false}= Astro.props

---

<div class="main_logo">
    <Image src={logo} alt="ds barbershop logo" width="100" height="75" />
    <p>{hasBiznasName ? "D's Barbershop" : null}</p>
  </div>


  <style>
    .main_logo{
      color:var(--main_white);
      font-weight: 900;
      font-size: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;   
      gap: 20px;   
      width: 250px; 
    }

    p{
      width: 200px;
    }

  </style>