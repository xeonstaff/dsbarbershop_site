---
const { locationDetails, options={} } = Astro.props;

const{hours} = locationDetails
---


<div class="store_hours">
    {
      hours.map((hour) => (
        <div class="store_hours_details">
          <p class="text hours_detail_label">{hour.day}</p>
          <p class="text hours_detail_time">{hour.time}</p>
        </div>
      ))
    }
  </div>


<style>
    .store_hours {
      margin-top: var(--store_hours_marginTop, 20px);
      display: flex;
      flex-direction: column;
      width: var(--store_hours_width, 90%);
      justify-content: var(--store_hours_justifyContent,space-between);
      font-size: 20px;
      margin-left: var(--store_hours_marginLeft,20px);
    }
    .store_hours_details {
      display: flex;
      justify-content: space-between;
      font-family: "workSans";
  
      .hours_detail_label {
        font-family: "barlow";
        font-weight: 600;
      }
      p{
        margin: 0px;;
      }
    }
    @media screen and (max-width: 960px) {
      .store_hours {
        height: 50vw;
        width: 35vw;
        justify-content: space-evenly;
      }
      .text{
        font-size: .7em;
      }
    }

    @media (max-width: 820px) {
      .store_hours{
        height: 150px;
        width: 100%;
        justify-content: space-between;
      }
    }
    @media (max-width: 500px) {
    }
  </style>
  