---
const {
  tag,
  addAClass = "",
  Cssvars = {},
  class: className,
  ...rest
} = Astro.props;

const Element = tag || "span";
// font-black text-3xl text-center mt-2 p-5 uppercase"
---

<Element class:list={["content_commonformat", className]} {...rest}>
    <slot />
</Element>

<style define:vars={addAClass} scoped>
  h1 {
    width: 1026px;
    height: 178px;

  }
  p{
    font-family: "barlow";
    weight 500;
    font-size: 1em;
  }
  h2 {
    font-family: "barlow";
    font-style: normal;
    font-weight: 900;
    font-size: 2.7em;
    text-align: center;
    text-transform: uppercase;
  }
  h3 {
    font-family: "barlow";
    font-style: normal;
    font-weight: 900;
    font-size: 2.7em;
    text-align: center;
    text-transform: uppercase
  }
  h4 {
    font-family: "barlow";
    font-style: normal;
    font-weight: 800;
    font-size: 1.5em;
  }
  .content_commonformat{
    margin:0;
    padding 0;
    color:var(--commonformat_fontColor,var(--main_black));
    text-align: var(--commonformat_textAlign, left);
  }
</style>
